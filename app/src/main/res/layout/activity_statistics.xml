<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.myApp.vilrolf.discgolfputting.Activity.StatisticsActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutSpinnerStatistics">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerStatisticsSortGameType"
            android:layout_weight="1" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerStatisticsSortTime"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linearLayoutSpinnerStatistics"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutActivityStatistics">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayoutStatistics1">
        </TableLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayoutStatistics2"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_margin="20dp">
        </TableLayout>
    </LinearLayout>

    <com.db.chart.view.LineChartView
        xmlns:chart="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lineChartStatisticsActivity"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/linearLayoutActivityStatistics"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:paddingBottom="20dp" />


</RelativeLayout>
